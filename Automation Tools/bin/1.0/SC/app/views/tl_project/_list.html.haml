%table
  %tr
    %th.sortable= sortthis("projects","project_name", "Project Name")
    %th.sortable= sortthis("projects","project_id", "TestLink Project ID")
    %th Actions
  - tl_projects.each do |tl_project|
    %tr.general{:id => tl_project.id}
      %td.project_name= tl_project.project_name
      %td.project_id= tl_project.project_id
      %td.actions
        %nav.action_buttons
          = link_to(image_tag(ACTION_EDIT, :border=>0), {:action => "edit", :id=>tl_project.id}, :remote=>true, :id=>"action_edit")
          = link_to(image_tag(ACTION_DELETE,:border=>0), {:action => "destroy", :id=>tl_project.id}, :remote=>true, :id=>"action_delete")