%table.test_suites
  %th.sortable= sortthis("index","suite_name", "Test Suite")
  %th.sortable= sortthis("index","device_type", "Device")
  %th.sortable= sortthis("index","firmware_version", "Firmware")
  %th.sortable= sortthis("index","test_section", "Test Section")
  %th.sortable= sortthis("index","test_server_id", "Server")
  %th Status Flags
  - list.each do |ts|
    %tr{:class => "#{TEST_STATES[ts.result]} selection_option", :id => ts.id, :onclick => "window.location.href = '#{test_suite_path(ts.id)}'"}
      %td.tsname= ts.suite_name
      %td.tsdevice= ts.device_type
      %td.tsfirmware= ts.firmware_version
      %td.tssection= ts.test_section
      %td.tsserver= ts.test_server_id
      %td.tsflags